@using RecycleCoin.Grpc;
@using RecycleCoinBlockExplorer.ViewComponents;
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers;
@model Veri
@{
	ViewData["Title"] = "Arama";
	var isSingleBlock = Model.IsSingleBlock;
	var isSingleAccount = Model.IsSingleAccount;
	var isSingleTransaction = Model.IsSingleTransaction;
}

<h1>Arama Sonuçları</h1>
<main id="main" class="main">
	<section class="section">
		<div class="row">
			<div class="col-lg-12">
				@if (isSingleBlock)
				{
					@(await Component.InvokeAsync("BlocksComponent", Model))
				}
				@if (isSingleAccount)
				{
					@(await Component.InvokeAsync("AccountsComponent", Model))
				}
				@if (isSingleTransaction)
				{
					@(await Component.InvokeAsync("TransactionsComponent",Model))
					Model.IsPool = true;
					@(await Component.InvokeAsync("TransactionsComponent",Model))
				}
			</div>
		</div>
	</section>
</main>