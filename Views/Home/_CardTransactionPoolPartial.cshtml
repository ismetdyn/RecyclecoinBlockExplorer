<div class="col-xxl-3 col-md-3">
    <div class="card info-card pending-card">
        <div class="card-body">
            <h5 class="card-title">
                <a class="title" asp-area="" asp-controller="PendingTransactions" asp-action="Index">İşlem Havuzu</a>
                <i class="bi bi-question-circle" style="cursor:pointer;margin-right:10px"></i>
            </h5>

            <div class="filter">
                <div style="width:30px; margin-right:10px">
                </div>
            </div>
            <div class="d-flex align-items-center">
                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                    <i class="text-muted small bi bi-clock-history"></i>
                </div>
                <div class="ps-3">
                    <div style="width:100px"></div>
                    @{
                        var data = (long)ViewBag.HavuzdakiIslemSayisi;
                        double data2 = (long)ViewBag.HavuzdakiToplamIslemTutari;
                    }
                    <h6>@data.ToString()<span class="textSufix">Tx</span></h6>
                    <span class="infoSmall">
                        @data2.ToString("C6")&nbsp;<span class="textSufix">RC</span>
                    </span>
                    </>
                </div>
            </div>

        </div>
    </div>

</div>