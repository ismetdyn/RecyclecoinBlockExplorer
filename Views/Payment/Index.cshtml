@model Veri
@{
	ViewData["Title"] = "Odeme Al";
}

<h1>Odeme Al</h1>
<main id="main" class="main">
	<div class="pagetitle">
		<h4>Şayet sisteme carbon teslim edilmişse girilen adrese ödeme yapılacak.</h4>
	</div>

	<section class="section">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-body">
					<div class="card-title">
						<div class="row">
							<div class="col d-flex justify-content-start">
								<p>Adres</p>
							</div>
							<div class="col d-flex justify-content-end"></div>
						</div>
						<form class="d-flex align-items-center" asp-controller="Payment" asp-action="Index" method="post">
							<input style="width:600px" class="form-control me-2" type="text" name="adres" placeholder="Adres" title="Adres" />
							<button class="btn btn-outline-success" title="Odeme Al"><i class="bi bi-coin">Odeme Al</i></button>
						</form>
					</div>
				</div>
				<div class="card-footer">
					<h3>@Model.Mesaj</h3>
					@if (Model.IsSuccess)
					{	
					  	@(await Component.InvokeAsync("TransactionsComponent", Model));
					}
				</div>
			</div>
		</div>
	</section>
</main>

